<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sea"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SettingActivity">

    <RadioGroup
        android:id="@+id/rgmusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/ershidp"
        android:layout_marginLeft="@dimen/sidp">

        <TextView
            android:id="@+id/music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choice_music"
            android:textSize="@dimen/ershidp"
            android:textColor="@color/textcolor_white" />

        <RadioButton
            android:id="@+id/music1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/liushidp"
            android:paddingLeft="@dimen/wudp"
            android:text="@string/metu"
            android:textColor="@color/textcolor_white"
            android:textSize="@dimen/shibadp" />

        <RadioButton
            android:id="@+id/music2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/liushidp"
            android:paddingLeft="@dimen/wudp"
            android:text="@string/ding"
            android:textColor="@color/textcolor_white"
            android:textSize="@dimen/shibadp" />

        <RadioButton
            android:id="@+id/music3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/liushidp"
            android:paddingLeft="@dimen/wudp"
            android:text="@string/baji"
            android:textColor="@color/textcolor_white"
            android:textSize="@dimen/shibadp" />

        <RadioButton
            android:id="@+id/music4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/liushidp"
            android:paddingLeft="@dimen/wudp"
            android:text="@string/shua"
            android:textColor="@color/textcolor_white"
            android:textSize="@dimen/shibadp" />

    </RadioGroup>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vibrator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sidp"
            android:layout_marginTop="@dimen/badp"
            android:background="@color/transparent"
            android:text="@string/vibrator"
            android:textAllCaps="false"
            android:textColor="@color/textcolor_white"
            android:textSize="@dimen/ershidp" />

        <RadioGroup
            android:id="@+id/vibrator_on_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <RadioButton
                android:id="@+id/on_vibrator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shidp"
                android:text="@string/yes"
                android:textColor="@color/textcolor_white"
                android:textSize="@dimen/shibadp" />

            <RadioButton
                android:id="@+id/off_vibrator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shidp"
                android:text="@string/no"
                android:textColor="@color/textcolor_white"
                android:textSize="@dimen/shibadp" />

        </RadioGroup>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rgdiff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/badp"
        android:layout_marginLeft="@dimen/sidp">

        <TextView
            android:id="@+id/difficult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diff"
            android:textColor="@color/textcolor_white"
            android:textSize="@dimen/ershidp" />

        <RadioButton
            android:id="@+id/diff1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/liushidp"
            android:paddingLeft="@dimen/wudp"
            android:text="@string/difficult"
            android:textColor="@color/textcolor_white"
            android:textSize="@dimen/shibadp" />

        <RadioButton
            android:id="@+id/diff2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/liushidp"
            android:paddingLeft="@dimen/wudp"
            android:text="@string/medium"
            android:textColor="@color/textcolor_white"
            android:textSize="@dimen/shibadp" />

        <RadioButton
            android:id="@+id/diff3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/liushidp"
            android:paddingLeft="@dimen/wudp"
            android:text="@string/easy"
            android:textColor="@color/textcolor_white"
            android:textSize="@dimen/shibadp" />

    </RadioGroup>

    <Button
        android:id="@+id/clear_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/sidp"
        android:background="@color/transparent"
        android:text="@string/clear_rank"
        android:textSize="@dimen/ershidp"
        android:textColor="@color/textcolor_white"
        android:textAllCaps="false" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

    </LinearLayout>

    <Button
        android:id="@+id/btback4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/back_up"
        android:textSize="@dimen/ershierdp"
        android:textColor="@color/textcolor_white"
        android:background="@color/transparent"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/foot"
        android:textSize="@dimen/shibadp"
        android:textColor="@color/textcolor_black"/>

</LinearLayout>