<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@drawable/sea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/tv01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/yibaidp"
        android:gravity="center"
        android:text="2048"
        android:textSize="@dimen/jiushidp"
        android:textStyle="italic"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="@dimen/sanbaisidp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/tv01"
        android:layout_marginStart="@dimen/ershiwudp"
        android:layout_marginTop="@dimen/wushidp"
        android:layout_marginEnd="@dimen/ershiwudp"
        android:maxLines="1"
        android:hint="@string/input_name"
        android:textSize="@dimen/ershidp"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="true" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ershidp"
        android:layout_below="@+id/username"
        android:background="@color/transparent"
        android:textSize="@dimen/ershibadp"
        android:text="@string/login"
        android:textColor="@color/textcolor_white"
        android:textAllCaps="false"
         />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/foot"
        android:textSize="@dimen/shibadp"
        android:textColor="@color/textcolor_black" />

</RelativeLayout>